{
  "name": "@walltowall/calico",
  "version": "0.1.0",
  "description": "React components for using atmoically generated styles via props.",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.modern.js",
  "typings": "dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "clean": "rimraf ./dist",
    "start": "yarn clean && microbundle watch src/index.ts -o dist -f modern,cjs --jsx React.createElement",
    "build": "yarn clean && microbundle build src/index.ts -o dist -f modern,cjs --jsx React.createElement",
    "format": "prettier --write '{src,docs}/**/*.{ts,tsx,md}'",
    "test": "jest",
    "prepare": "yarn build",
    "release": "standard-version"
  },
  "homepage": "https://github.com/walltowall/calico",
  "repository": {
    "type": "git",
    "url": "https://github.com/walltowall/calico.git"
  },
  "keywords": [
    "React",
    "components",
    "static",
    "atomic",
    "css",
    "treat"
  ],
  "dependencies": {
    "clsx": "^1.1.1",
    "fp-ts": "^2.6.2"
  },
  "devDependencies": {
    "@babel/plugin-proposal-optional-chaining": "^7.10.1",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/jest": "^25.2.3",
    "cross-env": "^7.0.2",
    "csstype": "^2.6.10",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "microbundle": "^0.12.0",
    "prettier": "^2.0.5",
    "react": "^16.13.1",
    "rimraf": "^3.0.2",
    "standard-version": "^8.0.0",
    "treat": "^1.4.1",
    "ts-jest": "^26.1.0",
    "tslib": "^2.0.0",
    "typescript": "^3.9.3"
  },
  "peerDependencies": {
    "react": ">=16.8",
    "treat": ">=1.4.0"
  },
  "browserslist": ">1%, not ie 11, not op_mini all",
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "proseWrap": "always",
    "printWidth": 80
  },
  "babel": {
    "plugins": [
      "@babel/plugin-proposal-optional-chaining"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
